    public TipoDato toTipo(String tipo) {
        switch (tipo) {
            case "int":
                return TipoDato.INT;
      
            case "double":
                return TipoDato.DOUBLE;

            case "string":
                return TipoDato.STRING;

            case "char":
                return TipoDato.CHAR;

            case "bool":
                return TipoDato.BOOL;

            default:                
                return TipoDato.CLASS;
        }  
